<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="360dp">

            <ImageView
                android:id="@+id/pic_details_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="300dp"
            app:cardCornerRadius="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/animal_details_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/atma_semibold"
                    android:text="TOMMY"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/breed_details_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:text="GERMAN SHEPHERD"
                    android:textStyle="bold"
                    android:fontFamily="@font/atma_semibold"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:id="@+id/loc_details_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="85dp"
                    android:fontFamily="@font/atma_semibold"
                    android:text="slakfjkl;jfajfjlaskjdf"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/loc_details"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/loc_icon"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/fav_tv"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="80dp"
                    android:background="@drawable/fav_icon" />

                <TextView
                    android:id="@+id/message_tv"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/chat_icon1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:fontFamily="@font/atma_semibold"
                        android:textSize="15sp"
                        android:text="Dog"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" >
                    </Space>

                    <TextView
                        android:id="@+id/gender_details_et"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:fontFamily="@font/atma_semibold"
                        android:gravity="center"
                        android:text="FEMALE"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" >
                    </Space>

                    <TextView
                        android:id="@+id/size_details_et"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:fontFamily="@font/atma_semibold"
                        android:gravity="center"
                        android:text="200 INCH"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" >
                    </Space>

                    <TextView
                        android:id="@+id/age_details_et"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/round"
                        android:fontFamily="@font/atma_semibold"
                        android:gravity="center"
                        android:text="4 MONTH"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"/>

                </LinearLayout>


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="260dp"
                app:cardCornerRadius="40dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="80dp"
                    app:cardCornerRadius="140dp">

                    <ImageView
                        android:id="@+id/ownerPic_details"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#95F67952"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account_img"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/ownerName_details_et"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:background="@drawable/round"
                    android:fontFamily="@font/atma_semibold"
                    android:gravity="center_vertical"
                    android:text="HARRY POTTER  "
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/desc_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="95dp"
                    android:background="@drawable/round"
                    android:fontFamily="@font/atma_semibold"
                    android:text="This is my dog"
                    android:textSize="18sp"
                    android:padding="10dp"/>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            app:cardCornerRadius="30dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="#95F67952"
                android:fontFamily="@font/atma_semibold"
                android:gravity="center"
                android:text="Adopt me"
                android:textSize="50sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</ScrollView>