<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="360dp">

            <ImageView
                android:id="@+id/pic_details_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            app:cardCornerRadius="80dp">

                <RelativeLayout
                    android:id="@+id/relLay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/relLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/animal_details_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/atma_semibold"
                            android:text="TOMMY"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/breed_details_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/animal_details_et"
                            android:layout_marginStart="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/atma_semibold"
                            android:gravity="center_vertical"
                            android:text="GERMAN SHEPHERD"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/loc_details_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/breed_details_et"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/atma_semibold"
                            android:text="     slakfjkl;jfajfjlaskjdf"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/loc_details"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_alignStart="@id/loc_details_add"
                            android:layout_alignTop="@+id/loc_details_add"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/loc_icon" />

                        <TextView
                            android:id="@+id/fav_tv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignTop="@+id/animal_details_et"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="80dp"
                            android:background="@drawable/fav_empty" />

                        <TextView
                            android:id="@+id/message_tv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignTop="@+id/animal_details_et"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/chat_back4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/loc_details_add"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/round"
                                android:fontFamily="@font/atma_semibold"
                                android:gravity="center"
                                android:text="Dog"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/gender_details_et"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/round"
                                android:fontFamily="@font/atma_semibold"
                                android:gravity="center"
                                android:text="FEMALE"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/size_details_et"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/round"
                                android:fontFamily="@font/atma_semibold"
                                android:gravity="center"
                                android:text="200 INCH"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/age_details_et"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/round"
                                android:fontFamily="@font/atma_semibold"
                                android:gravity="center"
                                android:text="4 MONTH"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relLay"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="15dp"
                            android:layout_alignParentTop="true"
                            app:cardCornerRadius="140dp">

                            <ImageView
                                android:id="@+id/ownerPic_details"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#95F67952"
                                android:scaleType="centerCrop"
                                android:src="@drawable/account_img" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/ownerName_details_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/atma_semibold"
                            android:layout_toRightOf="@+id/cardView8"
                            android:padding="8dp"
                            android:text="HARRY POTTER  "
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desc_details_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ownerName_details_et"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/atma_semibold"
                            android:padding="10dp"
                            android:text="This is my dog"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/adoptPetCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:cardCornerRadius="30dp"
                            android:layout_below="@+id/desc_details_tv"
                            android:layout_marginTop="10dp">


                            <TextView
                                android:id="@+id/adopt_et"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="#4CAF50"
                                android:fontFamily="@font/atma_semibold"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Adopt me"
                                android:textColor="@color/white"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</ScrollView>