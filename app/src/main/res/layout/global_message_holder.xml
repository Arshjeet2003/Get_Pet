<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/global_message_cardView"
            android:layout_marginHorizontal="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:id="@+id/small_profile_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/account_img"/>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/global_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="9dp"
                android:text="rewnvwiofnew fwe fwioe"
                android:background="@drawable/chatting_with_tv"
                android:fontFamily="@font/atma_semibold"
                android:maxWidth="200dp"
                android:padding="6dp"
                android:textSize="14sp" />

        <TextView
            android:id="@+id/global_chat_sender_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/atma_semibold"
            android:text="gwiobveriufhvsvuiw"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/global_msg_tv"
            app:layout_constraintTop_toBottomOf="@+id/global_msg_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
